@model IEnumerable<TriftyTrifty.DataAccess.Models.ExpenseGroup>

<h2>Grupet e Shpenzimeve</h2>

<a asp-controller="ExpenseGroup" asp-action="Create" class="btn btn-primary mb-3">Krijo Grup</a>

<table class="table">
    <thead>
        <tr>
            <th>Emri i Grupit</th>
            <th>Veprime</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.GroupName</td>
                <td>
                    <a asp-controller="Expense" asp-action="ByGroup" asp-route-groupId="@item.Id" class="btn btn-info btn-sm">Shiko Shpenzimet</a>
                    <a asp-controller="ExpenseGroup" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Fshij</a>
                </td>
            </tr>
        }
    </tbody>
</table>