@model List<TriftyTrifty.DataAccess.Models.Expense>
@{
    var groupId = (int)ViewData["GroupId"];
    var groupName = ViewData["GroupName"] as string;
}

<h2>Shpenzimet për grupin: @groupName</h2>

<a asp-action="Create" asp-route-groupId="@groupId" class="btn btn-primary mb-3">Shto Shpenzim</a>
<a asp-controller="Home" asp-action="Index" class="btn btn-secondary mb-3">Kthehu te grupet</a>

<table class="table">
    <thead>
        <tr>
            <th>Përshkrimi</th>
            <th>Shuma</th>
            <th>Data</th>
            <th>Paguar nga</th>
            <th>Veprime</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <div class="alert alert-info">
                Nuk ka shpenzime për këtë grup. Ju lutem shtoni një shpenzim.
            </div>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Përshkrimi</th>
                        <th>Shuma</th>
                        <th>Data</th>
                        <th>Paguar nga</th>
                        <th>Veprime</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Description</td>
                            <td>@item.Amount €</td>
                            <td>@item.Date.ToString("yyyy-MM-dd")</td>
                            <td>@item.PaidByUser?.Name</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

    </tbody>
</table>