@{
    ViewData["Title"] = "Shpenzimet";
}
@model IEnumerable<TriftyTrifty.DataAccess.Models.Expense>

<h2>Lista e shpenzimeve</h2>
<a class="btn btn-primary">Shto shpenzim</a>
<table class="table">
    <thead>
        <tr>
            <th>Shuma</th>
            <th>Pershkrimi</th>
            <th>Data</th>
            <th>Paguar nga</th>
            <th>Veprime</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        { 
            <tr>
                <td>@item.Amount</td>
                <td>@item.Description</td>
                <td>@item.Date</td>
                <td>@item.PaidByUser.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Nrysho</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Fshij</a>
                </td>
            </tr>
        }
    </tbody>
</table>