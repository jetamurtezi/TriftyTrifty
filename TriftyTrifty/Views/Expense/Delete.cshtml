@model TriftyTrifty.DataAccess.Models.Expense

<h2>A je i sigurt që dëshiron të fshish këtë shpenzim?</h2>

<div>
    <strong>@Model.Description</strong> - @Model.Amount €
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger mt-2">Fshij</button>
    <a asp-action="ByGroup" asp-route-groupId="@Model.GroupId" class="btn btn-secondary mt-2">Anulo</a>
</form>